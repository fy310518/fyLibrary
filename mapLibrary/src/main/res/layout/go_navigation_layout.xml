<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="60dp"
    android:layout_alignParentBottom="true"
    android:background="@color/appBg"
    android:paddingLeft="@dimen/spacing_medium_small"
    android:paddingTop="@dimen/spacing_small_much"
    android:paddingRight="@dimen/spacing_small_much"
    android:paddingBottom="@dimen/spacing_small_much">

    <TextView
        android:id="@+id/txtLocationTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/imgNavigate"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/txtSecondColor"
        android:textSize="@dimen/txt_small" />

    <TextView
        android:id="@+id/txtLocationInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLocationTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/imgNavigate"
        android:ellipsize="marquee"
        android:gravity="bottom"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/txtLight"
        android:textSize="@dimen/txt_small_much" />

    <ImageView
        android:id="@+id/imgNavigate"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/spacing_small_much"
        android:scaleType="center"
        android:src="@drawable/icon_navigate" />

</RelativeLayout>