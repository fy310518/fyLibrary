<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/permissionLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvPermissionDescribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/spacing_medium_large"
        android:text=""
        android:textColor="@color/txtSuperColor"
        android:textSize="@dimen/txt_medium_small"
        android:textStyle="bold"
        tools:text="@string/default_always_message" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/txtLight"
        android:orientation="vertical"
        android:showDividers="middle">

        <ListView
            android:id="@+id/lvRefusePermission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:dividerHeight="@dimen/spacing_small_much"
            android:layout_marginLeft="@dimen/spacing_medium_large"
            android:layout_marginRight="@dimen/spacing_medium_large"
            android:layout_marginBottom="@dimen/spacing_medium_large"
            android:divider="@android:color/transparent"
            tools:layout_height="100dp" />

        <!--   特殊权限申请说明     -->
        <TextView
            android:id="@+id/txtSpecialPermission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_medium_large"
            android:layout_marginRight="@dimen/spacing_medium_large"
            android:layout_marginBottom="@dimen/spacing_medium_large"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/txtSuperColor"
            android:textSize="@dimen/txt_medium_small"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvPermissionCancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/appHeadBg"
            android:textSize="@dimen/txt_medium_small" />

        <TextView
            android:id="@+id/tvpermissionConfirm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/ok"
            android:textColor="@color/appHeadBg"
            android:textSize="@dimen/txt_medium_small" />
    </LinearLayout>


</LinearLayout>